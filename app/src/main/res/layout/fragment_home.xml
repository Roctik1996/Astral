<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/personal_info"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/view_my"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/bg_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/my_sign"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@id/view_my"
                    app:layout_constraintEnd_toEndOf="@id/view_my"
                    app:layout_constraintStart_toStartOf="@id/view_my"
                    app:layout_constraintTop_toTopOf="@id/view_my" />

                <TextView
                    android:id="@+id/txt_name_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/icon_sign"
                    app:layout_constraintStart_toEndOf="@id/view_my"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/icon_sign"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/icon_china_sign"
                    app:layout_constraintStart_toEndOf="@id/view_my"
                    app:layout_constraintTop_toBottomOf="@+id/txt_name_age" />

                <TextView
                    android:id="@+id/txt_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/icon_sign"
                    app:layout_constraintStart_toEndOf="@id/icon_sign"
                    app:layout_constraintTop_toTopOf="@id/icon_sign"
                    tools:text="Roctik" />

                <ImageView
                    android:id="@+id/icon_china_sign"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_scorpion_mini"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_my"
                    app:layout_constraintTop_toBottomOf="@+id/icon_sign" />

                <TextView
                    android:id="@+id/txt_china_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/icon_china_sign"
                    app:layout_constraintStart_toEndOf="@id/icon_china_sign"
                    app:layout_constraintTop_toTopOf="@id/icon_china_sign"
                    tools:text="Roctik" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/personal_info"
                tools:text="Today"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/day_percent"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_today">

                <LinearLayout
                    android:id="@+id/layout_love"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <hiennguyen.me.circleseekbar.CircleSeekBar
                        android:id="@+id/circular_love"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        app:csb_arcColor="@color/colorLoveLine"
                        app:csb_arcWidth="3dp"
                        app:csb_max="100"
                        app:csb_min="1"
                        app:csb_progressColor="@color/colorLove"
                        app:csb_progressWidth="3dp"
                        app:csb_textColor="@color/colorTextCircle"
                        app:csb_textSize="14sp"
                        app:csb_thumbSize="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_love"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextCircle"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_health"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <hiennguyen.me.circleseekbar.CircleSeekBar
                        android:id="@+id/circular_health"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        app:csb_arcColor="@color/colorHealthLine"
                        app:csb_arcWidth="3dp"
                        app:csb_max="100"
                        app:csb_min="1"
                        app:csb_progressColor="@color/colorHealth"
                        app:csb_progressWidth="3dp"
                        app:csb_textColor="@color/colorTextCircle"
                        app:csb_textSize="14sp"
                        app:csb_thumbSize="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_health"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextCircle"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_career"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <hiennguyen.me.circleseekbar.CircleSeekBar
                        android:id="@+id/circular_career"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        app:csb_arcColor="@color/colorCareerLine"
                        app:csb_arcWidth="3dp"
                        app:csb_max="100"
                        app:csb_min="1"
                        app:csb_progressColor="@color/colorCareer"
                        app:csb_progressWidth="3dp"
                        app:csb_textColor="@color/colorTextCircle"
                        app:csb_textSize="14sp"
                        app:csb_thumbSize="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_career"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextCircle"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_horoscope"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/day_percent">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@android:color/white"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/colorTabLine"
                    app:layout_constraintTop_toTopOf="parent"/>

                <FrameLayout
                    android:id="@+id/horoscope_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tabLayout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/lucky_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_horoscope"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_number"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_number">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="1dp"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:elevation="1dp"
            android:visibility="invisible"
            android:indeterminateTint="@color/colorAppBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>