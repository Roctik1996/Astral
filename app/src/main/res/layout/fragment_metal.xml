<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_my"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/my_sign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_metal"
            app:layout_constraintBottom_toBottomOf="@id/view_my"
            app:layout_constraintEnd_toEndOf="@id/view_my"
            app:layout_constraintStart_toStartOf="@id/view_my"
            app:layout_constraintTop_toTopOf="@id/view_my" />

        <TextView
            android:id="@+id/txt_name_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/icon_sign"
            app:layout_constraintStart_toEndOf="@id/view_my"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/icon_sign"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/icon_china_sign"
            app:layout_constraintStart_toEndOf="@id/view_my"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_age" />

        <TextView
            android:id="@+id/txt_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/icon_sign"
            app:layout_constraintStart_toEndOf="@id/icon_sign"
            app:layout_constraintTop_toTopOf="@id/icon_sign"
            tools:text="Roctik" />

        <ImageView
            android:id="@+id/icon_china_sign"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_my"
            app:layout_constraintTop_toBottomOf="@+id/icon_sign" />

        <TextView
            android:id="@+id/txt_china_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/icon_china_sign"
            app:layout_constraintStart_toEndOf="@id/icon_china_sign"
            app:layout_constraintTop_toTopOf="@id/icon_china_sign"
            tools:text="Roctik" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_metal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/bg_layout"
        app:layout_constraintTop_toBottomOf="@id/personal_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>