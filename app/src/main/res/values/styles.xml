<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Button.ToggleMale" parent="android:Widget">
        <item name="android:background">@drawable/bg_toggle_male</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButtonMale" parent="@style/AppTheme.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.ToggleMale</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="Widget.Button.ToggleFemale" parent="android:Widget">
        <item name="android:background">@drawable/bg_toggle_female</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButtonFemale" parent="@style/AppTheme.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.ToggleFemale</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="NavDrawerTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

</resources>
